{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Conecta IA application.",
      "properties": {
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        }
      },
      "required": [
        "email",
        "createdAt"
      ]
    },
    "Session": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Session",
      "type": "object",
      "description": "Represents a user's session with the Gemini AI.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Session)"
        },
        "startTime": {
          "type": "string",
          "description": "Timestamp indicating when the session started.",
          "format": "date-time"
        },
        "endTime": {
          "type": "string",
          "description": "Timestamp indicating when the session ended (can be null if the session is active).",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "startTime"
      ]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a single message within a session.",
      "properties": {
        "sessionId": {
          "type": "string",
          "description": "Reference to Session. (Relationship: Session 1:N Message)"
        },
        "sender": {
          "type": "string",
          "description": "Indicates who sent the message ('user' or 'gemini')."
        },
        "content": {
          "type": "string",
          "description": "The text content of the message."
        },
        "timestamp": {
          "type": "string",
          "description": "Timestamp indicating when the message was sent.",
          "format": "date-time"
        }
      },
      "required": [
        "sessionId",
        "sender",
        "content",
        "timestamp"
      ]
    },
    "KnowledgeSource": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "KnowledgeSource",
      "type": "object",
      "description": "Represents a source of knowledge added to the Gemini AI.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name or title of the knowledge source."
        },
        "url": {
          "type": "string",
          "description": "The URL of the knowledge source (if applicable).",
          "format": "uri"
        },
        "content": {
          "type": "string",
          "description": "The actual content of the knowledge source (if not a URL)."
        },
        "uploadDate": {
          "type": "string",
          "description": "Timestamp indicating when the knowledge source was uploaded.",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "uploadDate"
      ]
    },
    "AdminRole": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AdminRole",
      "type": "object",
      "description": "Defines an administrative role for a user.",
      "properties": {
        "isAdmin": {
          "type": "boolean",
          "description": "Flag indicating if the user has administrative privileges."
        },
        "assignedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the admin role was assigned."
        }
      },
      "required": ["isAdmin", "assignedAt"]
    },
     "Fiscal": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Fiscal",
      "type": "object",
      "description": "Represents a polling supervisor for elections.",
      "properties": {
        "apellidoYNombre": {
          "type": "string",
          "description": "Full name of the person."
        },
        "dni": {
          "type": "string",
          "description": "National Identity Document number."
        },
        "rol": {
          "type": "string",
          "description": "The role of the fiscal.",
          "enum": ["GENERAL", "MESA"]
        },
        "escuela": {
          "type": "string",
          "description": "The assigned school for monitoring."
        },
        "mesa": {
          "type": "string",
          "description": "The assigned voting table number."
        },
        "telefono": {
          "type": "string",
          "description": "Contact phone number."
        }
      },
      "required": [
        "apellidoYNombre",
        "dni",
        "rol"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profiles. Accessible only by the user themselves."
        }
      },
      {
        "path": "/users/{userId}/sessions/{sessionId}",
        "definition": {
          "entityName": "Session",
          "schema": {
            "$ref": "#/entities/Session"
          },
          "description": "Stores user sessions. Accessible only by the user themselves."
        }
      },
      {
        "path": "/users/{userId}/sessions/{sessionId}/messages/{messageId}",
        "definition": {
          "entityName": "Message",
          "schema": {
            "$ref": "#/entities/Message"
          },
          "description": "Stores messages within a session. Accessible only by the user themselves."
        }
      },
      {
        "path": "/knowledgeSources/{knowledgeSourceId}",
        "definition": {
          "entityName": "KnowledgeSource",
          "schema": {
            "$ref": "#/entities/KnowledgeSource"
          },
          "description": "Stores knowledge sources added to the Gemini AI. Accessible by any authenticated user."
        }
      },
      {
        "path": "/roles_admin/{userId}",
        "definition": {
          "entityName": "AdminRole",
          "schema": {
            "$ref": "#/entities/AdminRole"
          },
          "description": "Stores admin roles for users. Only accessible for reads by the assigned user."
        }
      },
       {
        "path": "/fiscales/{fiscalId}",
        "definition": {
          "entityName": "Fiscal",
          "schema": {
            "$ref": "#/entities/Fiscal"
          },
          "description": "Stores information about polling supervisors (fiscales)."
        }
      }
    ]
  }
}
